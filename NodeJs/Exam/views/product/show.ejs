<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Product</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="card ">
            <div class="card-header">
                <div class="row">
                    <div class="col col-md-6 "><b>Product</b></div>
                    <div class="col col-md-6">
                        <a href="add" class="btn btn-success btn-sm float-end">Add</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered ">
                    <tr>
                        <th>ProductCode</th>
                        <th>ProductName</th>
                        <th>ProductDate</th>
                        <th>ProductOriginPrice</th>
                        <th>Quantity</th>
                        <th>ProductStoreCode</th>
                        <th>Action</th>
                    </tr>        
                            
                            <% products.forEach((product) => { %>
                                <tr>
                                  <td><%= product.code %></td>
                                  <td><%= product.name %></td>
                                  <td><%= product.date %></td>
                                  <td><%= product.price %></td>
                                  <td><%= product.quantity %></td>
                                  <td><%= product.storeCode %></td>
                                  <td>
                                    <!-- <form method="post" action="#">
                                      <a href="#" class="btn btn-primary btn-sm">View</a>
                                      <a href="#" class="btn btn-warning btn-sm">Edit</a>
                                      <a href="/product/delete" class="btn btn-danger btn-sm">Delete</a>
                                    </form> -->
                                    <form method="post" action="/product/delete/<%= product._id %>">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                      </form>
                                  </td>
                                </tr>
                              <% }); %>
                </table>
            </div>
        </div>
    
</body>
</html>